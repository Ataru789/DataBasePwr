@page
@model ksiegarnia_backend.Pages.Books.DeleteModel

<form method="post">
    <input asp-for="Book.BookId" hidden />
    <div class="border-bottom p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Book</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Book.BookId" class="p-0"></label>
            <input asp-for="Book.BookId" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Book.Title" class="p-0"></label>
            <input asp-for="Book.Title" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Book.Price" class="p-0"></label>
            <input asp-for="Book.Price" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Book.Availability" class="p-0"></label>
            <input asp-for="Book.Availability" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Book.AuthorId" class="p-0"></label>
            <input asp-for="Book.AuthorId" disabled class="form-control" />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/books/index" class="btn btn-secondary border form-control">
                    Cancel
                </a>
            </div>
        </div>
    </div>
</form>
