@page
@model ksiegarnia_backend.Pages.Authors.CreateAuthorModel

<form method="post">

    <div class="border-bottom p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Author</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="ModelOnly"></div>*@
        <div class="mb-3 row p-1">
            <label asp-for="Author.AuthorId" class="p-0"></label>
            <input asp-for="Author.AuthorId" class="form-control" />
            <span asp-validation-for="Author.AuthorId" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Author.FirstName" class="p-0"></label>
            <input asp-for="Author.FirstName" class="form-control" />
            <span asp-validation-for="Author.FirstName" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Author.LastName" class="p-0"></label>
            <input asp-for="Author.LastName" class="form-control" />
            <span asp-validation-for="Author.LastName" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/authors/indexauthor" class="btn btn-secondary border form-control">
                    Cancel
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}