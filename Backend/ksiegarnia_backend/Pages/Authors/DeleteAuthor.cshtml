@page
@model ksiegarnia_backend.Pages.Authors.DeleteAuthorModel

<form method="post">
    <input asp-for="Author.AuthorId" hidden />
    <div class="border-bottom p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Author</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Author.AuthorId" class="p-0"></label>
            <input asp-for="Author.AuthorId" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Author.FirstName" class="p-0"></label>
            <input asp-for="Author.FirstName" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Author.LastName" class="p-0"></label>
            <input asp-for="Author.LastName" disabled class="form-control" />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/authors/indexauthor" class="btn btn-secondary border form-control">
                    Cancel
                </a>
            </div>
        </div>
    </div>
</form>
