@page
@model ksiegarnia_backend.Pages.BooksUser.CartModel
@{
}
<div class="container">
    <h2 class="text-dark">Your Cart</h2>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.CartItems)
            {
                <tr>
                    <td>@obj.Book.Title</td>
                    <td>@obj.Book.Price.ToString("C2")</td>
                    <td>@obj.Quantity</td>
                    <td>@((obj.Quantity * obj.Book.Price).ToString("C2"))</td>
                    <td>
                        <a asp-page="/BooksUser/Delete" asp-route-id="@obj.Book.Title" class="btn btn-danger mx-2">
                            <i class="bi bi-pencil"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <h4>
            Total:
            @(Model.CartItems.Sum(item => item.Quantity * item.Book.Price).ToString("C2"))
        </h4>
        <div class="mt-4">
            <a asp-page="/BooksUser/Purchase" class="btn btn-primary">
                Purchase
            </a>
        </div>
    </div>
</div>
